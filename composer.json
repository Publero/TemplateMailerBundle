{
    "name": "publero/template-mailer-bundle",
    "type": "symfony-bundle",
    "description": "Symfony PubleroTemplateMailerBundle",
    "keywords": ["email", "mailer", "template"],
    "homepage": "https://github.com/Publero/TemplateMailerBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Tomas Pecserke",
            "email": "tomas@pecserke.eu"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.3.3",
        "symfony/config": "~2.3",
        "symfony/dependency-injection": "~2.3",
        "symfony/http-kernel": "~2.3",
        "symfony/twig-bridge": "~2.3",
        "symfony/yaml": "~2.3",
        "doctrine/common": ">=2.2,<2.5",
        "publero/net_gearman": "~1.0@dev",
        "pecserke/twig-doctrine-loader-bundle": "~1.0@dev",
        "pecserke/universal-mappings": "~1.1@alpha"
    },
    "require-dev": {
        "doctrine/doctrine-bundle": "1.2.*@dev",
        "doctrine/orm": "2.3.*",
        "doctrine/mongodb-odm": "1.0.*@dev",
        "doctrine/mongodb-odm-bundle": "3.0.*@dev"
    },
    "autoload": {
        "psr-4": { "Publero\\TemplateMailerBundle\\": "" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    }
}
